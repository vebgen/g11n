{
    "name": "g11n-cli",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/g11n-cli/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/rollup:rollup",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/apps/g11n-cli",
                "main": "apps/g11n-cli/src/cli.ts",
                "tsConfig": "apps/g11n-cli/tsconfig.lib.json",
                "assets": [],
                "project": "apps/g11n-cli/package.json",
                "compiler": "swc"
            }
        },
        "publish": {
            "command": "node tools/scripts/publish.mjs g11n-cli {args.ver} {args.tag}",
            "dependsOn": ["build"]
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["apps/g11n-cli/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/g11n-cli/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    },
    "tags": []
}
